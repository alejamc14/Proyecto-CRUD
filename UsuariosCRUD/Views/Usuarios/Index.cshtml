@model IEnumerable<UsuariosCRUD.Models.Usuario>

@{
    ViewBag.Title = "Usuarios";
}

<h2 class="mb-4 text-black">Gestión de Usuarios</h2>

<div style="margin-top:15px;">
    @Html.ActionLink(" Crear nuevo usuario", "Create", null, new { @class = "btn btn-primary mb-3 bi bi-person-fill-add" })
</div>

@using (Html.BeginForm("Buscar", "Usuarios", FormMethod.Get))
{
    <div style="margin-bottom: 15px">
        @Html.TextBox("cedula", null, new { @class = "form-control", placeholder = "Buscar por cédula", style = "width:250px; display:inline-block;" })
        <input type="submit" value="Buscar" class="btn btn-primary " />
        @Html.ActionLink("Mostrar todos", "Index", null, new { @class = "btn btn-secondary" })
    </div>
}


<table class="table table-striped table-hover table-bordered">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Cedula)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Apellidos)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Profesion)
        </th>
        <th class="text-center" style="width: 300px;"></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Cedula)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Apellidos)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Profesion)
            </td>
            <td class="d-flex justify-content-center gap-2">
                @Html.ActionLink(" Editar", "Edit", new { id = item.Cedula }, new { @class = "btn btn-warning btn-sm bi bi-pencil-square" })
                @Html.ActionLink(" Detalle", "Details", new { id = item.Cedula }, new { @class = "btn btn-info btn-sm bi bi-info-circle" })
                @Html.ActionLink(" Eliminar", "Delete", new { id = item.Cedula }, new { @class = "btn btn-danger btn-sm bi bi-trash3" })
            </td>
        </tr>
    }

</table>
